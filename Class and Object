public class Person {
    // Fields or attributes
    private String name;
    private int age;

    // Constructor
    public Person(String name, int age) {
        this.name = name;
        this.age = age;
    }

    // Method to get the person's information
    public void displayInfo() {
        System.out.println("Name: " + name);
        System.out.println("Age: " + age);
    }

    // Getter method for the name
    public String getName() {
        return name;
    }

    // Getter method for the age
    public int getAge() {
        return age;
    }

    // Setter method for the name
    public void setName(String name) {
        this.name = name;
    }

    // Setter method for the age
    public void setAge(int age) {
        this.age = age;
    }

    public static void main(String[] args) {
        // Creating an object of the Person class
        Person person1 = new Person("John Doe", 25);

        // Calling the displayInfo method
        person1.displayInfo();

        // Modifying the name using the setter method
        person1.setName("Jane Doe");

        // Modifying the age using the setter method
        person1.setAge(30);

        // Calling the displayInfo method again
        person1.displayInfo();
    }
}
